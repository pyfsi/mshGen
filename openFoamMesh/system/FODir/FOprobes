{
    type                probes;
    libs                (sampling);
    executeControl      timeStep;
    executeInterval     1;
    writeControl        timeStep;
    writeInterval       1;
    fields  (U);
    probeLocations
    (
        (-0.280 0.700 0.441) 
        (+1.400 0.700 0.353)
        (+2.520 0.700 0.280)
    );
}

